.header {
  padding: 55px 2em 20px;
  margin-bottom: 25px;
  display: flex
  align-items: baseline
  justify-content: space-between
  position: relative;

  .blog-title .logo {
    color: linkColor;
    font-size: 24px;
    font-family: "PingFang-SC", sans-serif;
    text-decoration: none;
  }

  .menu {
    margin: 0;
    padding: 0;

    .menu-item {
      font-size: 15px;
      display: inline-block;
      margin-right: 10px;
      padding: 0 1em;
    }

    .menu-item-link {
      color: tipsColor;
      text-decoration: none;
      transition: all .3s linear;

      &:hover, &.active {
        color: linkColor;
      }
    }
  }

  &::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 2em;
    height: 2px;
    width: 50px;
    background-color: #dfdfdf;
  }
}
