.footer {
  height: 180px;
  padding: 60px paddingJustify 0;
  background: footerBackColor;
  font-size: textSize;

  .footer-content {
    display: flex;
    max-width: 1440px;
    margin: 0 auto;
  }

  a {
    color: linkColor;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  .copyright {
    color: linkColor;
    margin-bottom: 1em;
  }

  .footer-info {
    color: tipsColor;
    font-size: textSize;
  }

  .contact-info {
    flex: 1;
    display: flex;

    justify-content: flex-end;

    .contact-link {
      font-size: 2em;
      color: textColor;
      transition: all .3s linear;
      padding: 0 .5em;

      &:hover {
        color: linkColor;
        text-decoration: none;
      }

      &:last-of-type {
        padding-right: 0;
      }
    }
  }

  @media (max-width: 768px) {
    padding: 40px paddingJustifyMiddle 0;
    height: 150px;
  }

  @media (max-width: 480px) {
    flex-wrap: wrap-reverse;
    padding-top: 20px;

    .contact-info {
      justify-content: flex-start;

      .contact-link {
        &:first-of-type {
          padding-left: 0;
        }
      }
    }

    .footer-content {
      flex-direction: column;
    }

    .footer-info {
      margin-bottom: 10px;
    }
  }
}

.fixed {
  .footer {
    position: fixed;
    width: 100%;
    bottom: 0;
  }
}
